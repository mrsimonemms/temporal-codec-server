{
  "name": "devcontainer",
  "image": "ghcr.io/mrsimonemms/devcontainers/full",
  "features": {
    "ghcr.io/mrsimonemms/devcontainers/cobra-cli:1": {},
    "ghcr.io/guiyomh/features/goreleaser:0": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "tamasfe.even-better-toml"
      ],
      "settings": {}
    }
  },
  "postCreateCommand": {
    "bootstrap": "ln -s $PWD/.cobra.yaml $HOME/.cobra.yaml && if [ ! -f \"go.mod\" ]; then go mod init \"github.com/mrsimonemms/temporal-codec-server\"; fi && if [ ! -f \"main.go\" ]; then cobra-cli init && go mod tidy; fi"
  },
  "containerEnv": {
    "GIT_REPO": "github.com/mrsimonemms/temporal-codec-server"
  },
  "postStartCommand": {
    "installAir": "go install github.com/air-verse/air@latest",
    "installSwaggo": "go install github.com/swaggo/swag/cmd/swag@latest"
  }
}
